function chamarWhats() {

    // ðŸ“± TROQUE APENAS ESTE NÃšMERO
    const telefone = "5519986001846"; // 55 + 19 + 986001846
   const corrida = document.getElementById("corrida").value;

    if (corrida === "") {
        alert("Selecione uma corrida");
        return;
    }

    const mensagem = `OlÃ¡, gostaria de solicitar: ${corrida}`;

