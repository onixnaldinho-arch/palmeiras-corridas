const tabela = {
  "Centro-Bairro PrÃ³ximo": 15,
  "Centro-Bairro MÃ©dio": 18,
  "Centro-Bairro Distante": 22
};

const form = document.getElementById("corridaForm");
const valorTexto = document.getElementById("valor");

form.addEventListener("change", () => {
  const origem = "Centro";
  const destino = document.getElementById("bairroDestino").value;
  const chave = origem + "-" + destino;

  const valor = tabela[chave] || "A combinar";
  valorTexto.innerText = "ðŸ’° Valor da corrida: R$ " + valor;
});

form.addEventListener("submit", (e) => {
  e.preventDefault();

  const nome = document.getElementById("nome").value;
  const destino = document.getElementById("bairroDestino").value;
  const pagamento = document.getElementById("pagamento").value;
  const valor = valorTexto.innerText.replace("ðŸ’° Valor da corrida: ", "");

  const mensagem = `


Cliente: ${nome}
Origem: Centro
Destino: ${destino}
Pagamento: ${pagamento}
${valor}
`;

  const telefone = "5519986001846"; // SEU WHATSAPP
  const url = https://wa.me/${telefone}?text=${encodeURIComponent(mensagem)};

  window.open(url, "_blank");
});
